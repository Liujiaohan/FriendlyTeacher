<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain"
    android:orientation="vertical"
    >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/newlecture_back_btn"
            android:background="@mipmap/back"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="13dp"
            android:layout_width="12dp"
            android:layout_height="24dp" />
        <TextView
            android:text="@string/publish_activity_title"
            android:layout_marginLeft="112dp"
            android:textSize="20dp"
            android:layout_marginRight="97dp"
            android:textColor="@color/textBlue"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/newlecture_finish_btn"
            android:background="@mipmap/complete"
            android:layout_marginLeft="12dp"
            android:layout_width="24dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:text="@string/class_name"
                android:textColor="@color/text_grey"
                android:layout_width="100dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/newlecture_classname_edt"
                android:textSize="18dp"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:text="@string/teach_person"
                android:textColor="@color/textMain"
                android:layout_width="100dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/newlecture_teachperson_edi"
                android:textColor="@color/textMain"
                android:textSize="14dp"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:text="@string/class_time"
                android:textColor="@color/textMain"
                android:layout_width="100dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/newlecture_startclasstime_edi"
                android:textColor="@color/textMain"
                android:textSize="14sp"
                android:layout_width="200dp"
                android:background="@null"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:text="@string/class_place"
                android:textColor="@color/textMain"
                android:layout_width="100dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/newlecture_clasplace_edi"
                android:textColor="@color/textMain"
                android:textSize="14sp"
                android:layout_width="200dp"
                android:background="@null"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:text="@string/each_class_time"
                android:textColor="@color/textMain"
                android:layout_width="100dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/newlecture_classtime_edi"
                android:textColor="@color/textMain"
                android:textSize="14dp"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            >
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:text="@string/class_type"
                android:textColor="@color/textMain"
                android:layout_width="100dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/newlecture_classtype_edi"
                android:textColor="@color/textMain"
                android:textSize="14sp"
                android:background="@null"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <EditText
        android:id="@+id/newlecture_introduction_edt"
        android:background="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:paddingRight="16dp"
        android:minLines="5"
        android:gravity="top"
        android:hint="@string/class_introduction"
        android:layout_width="match_parent"
        android:layout_height="350dp" />
</LinearLayout>
