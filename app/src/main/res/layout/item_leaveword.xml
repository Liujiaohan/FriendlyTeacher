<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_lw_content"
                tools:text="哈哈哈哈哈哈哈哈哈哈哈哈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginRight="50dp"/>
            <Button
                android:id="@+id/btn_lw_star"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignTop="@+id/tv_lw_content"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/star1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_below="@id/tv_lw_content"
                android:id="@+id/tv_leave_word_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:text="2017-11-11"/>
            <Button
                android:id="@+id/btn_lw_communicate"
                android:layout_below="@+id/btn_lw_star"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/home"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>