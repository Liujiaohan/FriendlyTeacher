<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="328dp"
    android:layout_height="130dp"
    android:layout_marginBottom="13dp"
    android:layout_marginLeft="17dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lecture_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingTop="22dp"
                android:textColor="#000000"
                android:textSize="14dp"
                tools:text="JAVA与安卓开发基础" />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="10dp"
                tools:text="杜一百" />

            <ImageButton
                android:id="@+id/btn_star"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:layout_weight="0.17"
                android:background="@mipmap/star2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程介绍 :    "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_lecture_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                tools:text="讲解有关JAVA和安卓开发基础知识" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开课地点 :    "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_lecture_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                tools:text="华科东九楼" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开课时间 :    "
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_lecture_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                tools:text="2017.10.05-2018.02.30" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>